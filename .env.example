# Epiphany Engine Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# API Authentication
# ============================================
# Enable API key authentication (true/false)
API_KEY_ENABLED=false

# API key for authentication (required if API_KEY_ENABLED=true)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=

# JWT secret key for token signing (required if API_KEY_ENABLED=true)
# Must be at least 32 characters long
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
JWT_SECRET_KEY=

# JWT token expiration in minutes (default: 60)
JWT_EXPIRATION_MINUTES=60

# ============================================
# Server Configuration
# ============================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Server host and port
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# Number of worker processes (for production)
UVICORN_WORKERS=4

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# Example: https://example.com,https://app.example.com
# Use * for development only (NOT recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Rate Limiting
# ============================================
# Default rate limit (requests per hour)
RATE_LIMIT_DEFAULT=100

# Simulation endpoint rate limit (requests per minute)
RATE_LIMIT_SIMULATE=20
